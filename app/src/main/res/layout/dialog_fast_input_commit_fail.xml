<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x64"
            android:background="@drawable/shape_white_24"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务条款和隐私政策提示"
                android:textColor="#FF333333"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/x30"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎使用本软件！
在您使用本软件前，请您认真阅读并了解服务隐私协议，以了解我们的服务内容和我们在手机和使用您相关个人信息时的处理规则。我们将严格按照隐私协议为您提供服务，保护您的个人信息。"
                android:layout_marginTop="@dimen/y30"
                android:textColor="#FF999999"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                > <TextView
                android:id="@+id/tv_zhuce_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《注册协议》"
                android:textColor="#00AAF8"

                />

                <TextView
                    android:id="@+id/tv_yinsi_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00AAF8"
                    android:text="《隐私协议》"
                   android:layout_marginLeft="@dimen/x50"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x50"
                android:background="@drawable/shape_blue_4_bantou"
                android:gravity="center"
                android:text="同意"
                android:textColor="#FFffff"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_no_agree"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x72"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center"
                android:text="不同意并退出app>>"
                android:textColor="#00AAF8"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/x20"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>