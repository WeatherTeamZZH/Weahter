<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_xingqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/x30"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_xingqi"
        android:layout_marginLeft="@dimen/x20"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tv_data"
        android:layout_marginLeft="@dimen/x100"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iv_weather"
        android:layout_marginLeft="@dimen/x20"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30">
        <TextView
            android:id="@+id/tv_day_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0°"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_night_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0°"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#33ffffff"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>