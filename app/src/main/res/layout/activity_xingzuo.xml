    </LinearLayout>

    <View
        android:id="@+id/v_line_001"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/rl_start_001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/rb_start_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="false"
            app:srb_drawableEmpty="@mipmap/ic_ratingbar_unselected"
            app:srb_drawableFilled="@mipmap/ic_ratingbar_selected"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_rating="5"
            android:layout_marginTop="2dp"
            app:srb_scrollable="false"
            app:srb_starHeight="12dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="13dp"
            app:srb_stepSize="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rb_start_001"
            android:text="综合运势"
            android:textColor="@color/graymid"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_start_001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_start_001"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="少时诵诗书所" />

    </RelativeLayout>

